/* pages/todos/todos.wxss */
.page{

    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
}
.content{
    width: 100%;
    height: 1220rpx;
    background-color: #eeeeee;
    padding:40rpx ;
    display: flex;
    flex-direction: column;
    /* justify-content: space-around; */
}

.adddo image{
    margin-top:10rpx;
    position: absolute;
    width: 42rpx;
    height: 42rpx;
}
.adddo input{
    height: 44rpx;
    width: 80%;
    border: solid 2rpx #8a8a8a;
    border-radius: 10rpx;
    padding-left: 43rpx;
}
.dotext{
    font-family: "黑体";
    font-size: 30rpx;
}

.catelist{
    margin-top: 40rpx;
    /* border: solid 2rpx #8a8a8a; */
     border-radius: 10rpx;
     width: 85%;
     /* height: 60%; */
    display: flex;
    flex-direction: column;

}

.items{
    display: flex;
    padding:20rpx 40rpx;
    border: solid 2rpx #8a8a8a;
    font-size: 32rpx;
}
.items text{
    flex: 1;
    padding-left: 20rpx;
}
.clean{
    width: 85%;
    display: flex;
    /* flex-direction: column; */
    justify-content: space-between;
    color: green;
}
.show{
    text-align: center;
    color: rgb(151, 85, 85);
    font-family: "黑体";
    font-size: 28rpx;
    
}
